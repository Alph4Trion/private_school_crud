<!DOCTYPE html>
<html>
<head>
  <title>
    <%= title %>
  </title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
  <h1><%= title %></h1>
  <div>
    <table>
      <tr class="bold-center">
        <td>ID</td>
        <td>Name</td>
        <td>Surname</td>
        <td>Birthday</td>
        <td>Fees</td>
        <td>Created_at</td>
        <td>Updated_at</td>
      </tr>
      
    <% for(var i = 0; i < students.length; i++) { %>
        

        <tr>
      <td> <%= students[i].id %> </td>
      <td><%= students[i].first_name %></td>
      <td><%= students[i].last_name %></td>
      <td><%= students[i].date_of_birth %></td>
      <td><%= students[i].tuition_fees %></td>
      <td><%= students[i].created_at.toLocaleString() %></td>
      <td><%= students[i].updated_at.toLocaleString() %></td>
      <td><button><a href="<%= url + '/edit/' + students[i].id %>"> Edit</a></button></td>
      <td><button onclick="deleteStudent('<%= url %>' + '/delete/' + '<%= students[i].id %>')"> Delete</button></td>
        </tr>
      <% } %>
    </table>
  </div>
  <div id="error"><%= message %></div>
  <script>
    function deleteStudent(url) {
      var dialog = confirm("Are you sure you want to delete the specific student?");
      if(dialog) {
        window.location.replace(url);
      } else alert("Student is safe for now!!!");
    }
  </script>
</body>

</html>